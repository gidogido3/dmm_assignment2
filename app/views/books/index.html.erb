<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tr>
      <td>トラブル知らずのシステム設計</td>
      <td>システム設計の要点を図解で説明してくれます</td>
      <td>Show</td>
      <td>Edit</td>
      <td>Destroy</td>
    </tr>
  <tbody>
    <tr></tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <div class="field">
    <%= f.label 'title' %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label 'body' %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>
