<h1>Editing Book</h1>

<%= form_with model: @edit_book, url:update_book_path(@edit_book.id), method: :patch do |f| %>
  <% if @edit_book.errors.any? %>
    <div class="error_explanation">
      <h2 class="error_h2"><%= @edit_book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @edit_book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @edit_book.errors.has_key?(:title) %>
    <label class="label_error" for="">Title</label>
    <div class="field_error">
      <%= f.text_field :title %>
    </div>

  <% else %>
  <div class="field">
    <label for="">Title</label>
    <%= f.text_field :title %>
  </div>
  <% end %>

  <% if @edit_book.errors.has_key?(:body) %>
    <label class="label_error" for="">Body</label>
    <div class="field_error">
      <%= f.text_area :body %>
    </div>

  <% else %>
    <div class="field">
      <label for="">Body</label>
      <%= f.text_area :body %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>


  <%= link_to "Show", book_path(@edit_book.id) %>
  |
  <%= link_to "Back", "/books/" %>

<% end %>